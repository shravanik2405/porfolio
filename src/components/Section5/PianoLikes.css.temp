.pl-content-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 40px;
}

.pl-vase {
  width: auto;
  height: 382px; /* Matches SVG height */
  flex-shrink: 0;
}

@media (max-width: 980px) {
  .pl-content-wrapper {
    flex-direction: column;
    gap: 20px;
  }
  
  .pl-vase {
    height: 200px; /* Smaller on mobile */
  }
}
